<h3 data-category-id="all">All ({{posts.length}})</h3>
{{#each categories as |category|}}
  <a href="" data-category-id="{{category.id}}"><h3>{{category.category_name}} ({{category.posts.length}})</h3></a>
{{/each}}

<ol class="post-list">
  {{#each posts as |post|}}
    <li>
      {{> post-info-homepage post }}
    </li>
  {{/each}}
</ol>
