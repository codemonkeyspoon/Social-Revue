<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Socials Revue App</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>

  <body>
    <div class="wrapper">
      <header>
        <div class="logo-header">
        </div>
        <nav>
          <a href="/">Home</a>
          {{#if loggedIn}}
            <a href="/dashboard">Dashboard</a>
            <button id="logout" class="btn-no-style">Logout</button>
          {{else}}
            <form class="login-form">
              <div>
                <!-- <label for="email-login">Email:</label> -->
                <input type="text" id="email-login" placeholder="EMAIL" />
              </div>
              <div>
                <!-- <label for="password-login">Password:</label> -->
                <input
                  type="password"
                  id="password-login"
                  placeholder="PASSWORD"
                />
              </div>
              <div>
                <button class="btn" type="submit">LOGIN</button>
              </div>
            </form>

            <script src="/javascripts/login.js"> </script>
            <a href="/signup">Create Account</a>
          {{/if}}
        </nav>
      </header>
      <main>
        {{{body}}}
      </main>
      <footer>
        <ul>
          <li><a href="#">Home</a></li>
          <li><a href="#">Reviews</a></li>
          <!-- Trigger/Open The Modal -->
          <li><a href="#" id="myBtn">Add a Review</a></li>
          <li><a href="#">Contact Us</a></li>
        </ul>
      </footer>
    </div>

    {{#if loggedIn}}
      <script src="/javascripts/logout.js"></script>
      <script src="/javascripts/score.js"></script>
    {{/if}}
  </body>

  <!---modal--->
  <!-- The Modal -->
  <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <section class="modal-header">
        <h2>Create New Post</h2>
      </section>
      
        <form class="new-post-form">
          <section class="modal-form">
          <div class="modal-sections" id="m-category">
            <select name="category_id" id="category-select">
              <option value="">--Please choose a Category--</option>
              {{#each categories}}
                <option value="{{id}}">{{category_name}}</option>
              {{/each}}
            </select>
          </div>
          <div class="modal-sections" id="m-title">
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
          </div>
          <div class="modal-sections" id ="m-label">
            <label for="post-content">Post Content</label>
            <textarea name="post-content"></textarea>
          </div>
          <button type="submit" class="btn">Create</button>
          </section>
        </form>
      
    </div>

  </div>
  <script src="/javascripts/modal.js"></script>
</html>